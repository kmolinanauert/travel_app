<% if notice != nil %>
  <p id="notice" class="alert alert-success" role="alert">
    <%= notice %>
  </p>
<% end %>

<h1>The Wanderlust List</h1>
<ul class="nav nav-pills" role="tablist">
  <li><%= link_to "All", destinations_path %></li>
  <% @my_countries.each do |c| %>
    <li><%= link_to "#{c.country}", controller: "destinations", country: "#{c.country}" %></li>
  <% end %>
</ul>
<div class="row-fluid">
    <% @destinations.each do |destination| %>
  <div class="col-xs-6 col-md-4 destination-post">
    <div class="destination-post">
         <% if @destination.avatar_file_name != nil %>
         <%= image_tag destination.avatar.url(:medium), class: "img-responsive" %><% end %>
         <h2><%= destination.city %></h2>
         <h3><%= destination.country %></h3>
         <p><%= destination.description %></p>
         </div>
         
       
         <div class="btn-group">
          <%= link_to 'Show', destination, class: "button" %>
          <%= link_to 'Edit', edit_destination_path(destination), class: "button" %>
          <%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' }, class: "button" %>
         </div>
    </div>
    <% end %>
    <div class="row-fluid">
<%= link_to 'New Destination', new_destination_path, class: "button" %>
</div>